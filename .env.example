# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Auth
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Tavily (for Research PRD - web search)
# Get API key from https://tavily.com
TAVILY_API_KEY=your_tavily_api_key

# =============================================================================
# Lemon Squeezy Configuration
# Get these from https://app.lemonsqueezy.com/settings/api
# =============================================================================

# API Key (Settings > API)
LEMONSQUEEZY_API_KEY=your_api_key_here

# Store ID (visible in store URL: https://app.lemonsqueezy.com/stores/XXXXX)
LEMONSQUEEZY_STORE_ID=your_store_id_here

# Webhook Secret (Settings > Webhooks > Create webhook)
# Webhook URL should be: https://your-domain.com/api/webhook/lemon-squeezy
# Events to subscribe: order_created, subscription_created, subscription_payment_success,
#                      subscription_cancelled, subscription_expired, subscription_resumed
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# One-time Credit Packages (Variant IDs)
# =============================================================================
# Create 4 products with these credit amounts:
# - Starter: 10 credits
# - Basic: 30 credits
# - Pro: 100 credits
# - Business: 300 credits
NEXT_PUBLIC_LS_VARIANT_STARTER=variant_id_for_starter
NEXT_PUBLIC_LS_VARIANT_BASIC=variant_id_for_basic
NEXT_PUBLIC_LS_VARIANT_PRO=variant_id_for_pro
NEXT_PUBLIC_LS_VARIANT_BUSINESS=variant_id_for_business

# =============================================================================
# Subscription Plans (Variant IDs)
# =============================================================================
# Create 3 subscription products with monthly and yearly variants:
# - Basic: 25 credits/month, $15/month or $144/year
# - Pro: 80 credits/month, $35/month or $336/year (most popular)
# - Business: 200 credits/month, $69/month or $662/year
NEXT_PUBLIC_LS_VARIANT_SUB_BASIC_MONTHLY=variant_id_for_basic_monthly
NEXT_PUBLIC_LS_VARIANT_SUB_BASIC_YEARLY=variant_id_for_basic_yearly
NEXT_PUBLIC_LS_VARIANT_SUB_PRO_MONTHLY=variant_id_for_pro_monthly
NEXT_PUBLIC_LS_VARIANT_SUB_PRO_YEARLY=variant_id_for_pro_yearly
NEXT_PUBLIC_LS_VARIANT_SUB_BUSINESS_MONTHLY=variant_id_for_business_monthly
NEXT_PUBLIC_LS_VARIANT_SUB_BUSINESS_YEARLY=variant_id_for_business_yearly
